<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.HistoryFragment">

    <TextView
        android:id="@+id/tv_summary_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/summary"
        android:textSize="30sp"
        android:padding="8dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary_heading"
        tools:text="Yola is a thingy that do the wingy tingy ah hoo ahh hooo."
        android:textSize="18sp"
        android:padding="8dp"/>

    <View
        android:id="@+id/v_hdivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tv_summary"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"/>

    <TextView
        android:layout_below="@+id/v_hdivider1"
        android:id="@+id/tv_detail_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail"
        android:textSize="30sp"
        android:padding="8dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_detail_heading"
        tools:text="Yola is a thingy that do the wingy tingy ah hoo ahh hooo."
        android:textSize="18sp"
        android:padding="8dp"/>

    <View
        android:id="@+id/v_hdivider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tv_detail"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_hdivider2"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tv_attribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_pictures"
        android:padding="4dp"
        android:text="@string/attribution"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_history_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/home_list_error"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/pb_history_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>